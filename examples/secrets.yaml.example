# ESPHome Secrets File
# Copy this file to secrets.yaml and fill in your values.
# IMPORTANT: Never commit secrets.yaml to git (it's in .gitignore).

# WiFi credentials
wifi_ssid: "your_wifi_ssid"
wifi_password: "your_wifi_password"

# ESPHome API encryption key (base64, 32 bytes)
# Generate with: openssl rand -base64 32
# Or with Python: python3 -c "import secrets,base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"
api_encryption_key: "your_32_byte_base64_key_here=="

# OTA update password
ota_password: "your_ota_password"

# Fallback AP password (used when WiFi is unavailable)
ap_password: "your_fallback_ap_password"

# Multical21 meter credentials
# Meter ID: exactly 8 hex characters from the sticker on your meter
# Example: "1A2B3C4D"
multical21_meter_id: "00000000"

# AES encryption key: exactly 32 hex characters
# Contact your water utility provider to obtain this key.
# Example: "0011223344556677AABBCCDDEEFF0011"
multical21_meter_key: "00000000000000000000000000000000"
